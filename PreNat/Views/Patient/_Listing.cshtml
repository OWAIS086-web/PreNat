@model PreNat.ViewModels.PatientListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Patients.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                               
                                <th>
                                    Name
                                </th>
                                <th>
                                    Surnames
                                </th>
                                <th>Type_of_Identity</th>
                                <th>Department_of_residence</th>
                                <th>City_Municipality_of_residence</th>
                                <th>Address_of_residence</th>
                                <th>Telephones_Landline</th>
                                <th>Cell_Phone</th>
                                <th>Date_of_birth</th>
                                <th>Age</th>
                                <th>Race_DANE_Information</th>

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Patients)
                            {
                            <tr>

                                <td>@item.Name</td>
                                <td>@item.Surnames</td>
                                <td>@item.Type_of_Identity</td>
                                <td>@item.Department_of_residence</td>
                                <td>@item.City_Municipality_of_residence</td>
                                <td>@item.Address_of_residence</td>
                                <td>@item.Telephones_Landline</td>
                                <td>@item.Cell_Phone</td>
                                <td>@item.Date_of_birth</td>
                                <td>@item.Age</td>
                                <td>@item.Race_DANE_Information</td>


                                <td>
                                    <a href="@Url.Action("Action", "Patient", new {ID=item.ID })"  class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-toggle="modal" data-target="#actionModal" data-href="@Url.Action("Delete", "Patient", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
   


</script>
