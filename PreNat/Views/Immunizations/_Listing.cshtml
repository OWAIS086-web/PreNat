@model PreNat.ViewModels.ImmunizationsListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Immunizationss.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>


                                <th>
                                    TetanusDiphtheria
                                </th>
                                <th>
                                    TetanusDiphtheria_Date
                                </th>
                                <th>TetanusDiphtheria_Quantity</th>
                                <th>TDAP</th>
                                <th>TDAP_Date</th>
                                <th>TDAP_Quantity</th>
                                <th>Influenza</th>
                                <th>Influenza_Date</th>
                                <th>Influenza_Quantity</th>
                                <th>Rubella</th>
                                <th>Rubella_Date</th>
                                <th>Rubella_Quantity</th>
                                <th>Hepatitis_B</th>
                                <th>Hepatitis_B_Date</th>
                                <th>Hepatitis_B_Quantity</th>
                                <th>Hepatitis_A</th>
                                <th>Hepatitis_A_Date</th>
                                <th>Hepatitis_A_Quantity</th>

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Immunizationss)
                            {
                            <tr>

                                <td>@item.TetanusDiphtheria</td>
                                <td>@item.TetanusDiphtheria_Date</td>
                                <td>@item.TetanusDiphtheria_Quantity</td>
                                <td>@item.TDAP</td>
                                <td>@item.TDAP_Date</td>
                                <td>@item.TDAP_Quantity</td>
                                <td>@item.Influenza</td>
                                <td>@item.Influenza_Date</td>
                                <td>@item.Influenza_Quantity</td>
                                <td>@item.Rubella</td>
                                <td>@item.Rubella_Date</td>
                                <td>@item.Rubella_Quantity</td>
                                <td>@item.Hepatitis_B</td>
                                <td>@item.Hepatitis_B_Date</td>
                                <td>@item.Hepatitis_B_Quantity</td>
                                <td>@item.Hepatitis_A</td>
                                <td>@item.Hepatitis_A_Date</td>
                                <td>@item.Hepatitis_A_Quantity</td>


                                <td>
                                    <button data-id="@item.ID" type="button" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</button>
                                    <button data-href="@Url.Action("Delete", "Immunizations", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "Immunizations")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })


</script>
