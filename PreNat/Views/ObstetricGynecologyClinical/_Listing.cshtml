@model PreNat.ViewModels.ObstetricGynecologyClinicalListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.ObstetricGynecologyClinicals.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                               
                                <th>
                                    PlannedPregnancy
                                </th>
                                <th>
                                    DesiredPregnancy
                                </th>
                                <th>PreconceptionCounseling</th>
                                <th>ContraceptiveFailure</th>
                                <th>DefinitiveMethod</th>
                                <th>Failure</th>

                                

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ObstetricGynecologyClinicals)
                            {
                            <tr>

                                <td>@item.PlannedPregnancy</td>
                                <td>@item.DesiredPregnancy</td>
                                <td>@item.PreconceptionCounseling</td>
                                <td>@item.ContraceptiveFailure</td>
                                <td>@item.DefinitiveMethod</td>
                                <td>@item.Failure</td>



                                <td>
                                    <a href="@Url.Action("Action", "ObstetricGynecologyClinical", new {ID=item.ID })" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-bs-toggle="modal" data-bs-target="#actionModal" data-href="@Url.Action("Delete", "ObstetricGynecologyClinical", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "ObstetricGynecologyClinical")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })


</script>
