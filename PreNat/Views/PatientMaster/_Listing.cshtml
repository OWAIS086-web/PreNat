@model PreNat.ViewModels.MainListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.PatientMasters.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                               
                                <th>
                                    Name
                                </th>
                               
                                <th>Surname</th>
                                <th>City</th>


                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PatientMasters)
                            {
                            <tr>

                                <td>@item.Name</td>
                                <td>@item.Surnames</td>
                                <td>@item.City_Municipality_of_residence</td>
                                <td>
                                    <a href="@Url.Action("Action", "PatientMaster", new {ID=item.ID })" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-href="@Url.Action("Delete", "PatientMaster", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

