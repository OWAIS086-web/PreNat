@model PreNat.ViewModels.LaboratoryTestsListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.LaboratoryTestss.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                               
                                <th>
                                    Group
                                </th>
                                <th>
                                    SanguineoGroup
                                </th>
                                <th>Laboratory_Tests</th>
                                <th>VDRL</th>
                                <th>Syphilis</th>
                                <th>VIH_L</th>


                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LaboratoryTestss)
                            {
                            <tr>

                                <td>@item.Group</td>
                                <td>@item.SanguineoGroup</td>
                                <td>@item.Laboratory_Tests</td>
                                <td>@item.VDRL</td>
                                <td>@item.Syphilis</td>
                                <td>@item.VIH_L</td>



                                <td>
                                    <a href="@Url.Action("Action", "LaboratoryTests", new {ID=item.ID })" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-href="@Url.Action("Delete", "LaboratoryTests", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "LaboratoryTests")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })


</script>
