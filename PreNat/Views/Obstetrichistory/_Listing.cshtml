@model PreNat.ViewModels.ObstetrichistoryListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Obstetrichistory.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                               
                                <th>
                                    Gestations
                                </th>
                                <th>
                                    No Of Pregnancy
                                </th>
                                <th>
                                    Delivery
                                </th>
                                <th>Term</th>
                                <th>Premature</th>
                                <th>Vaginal</th>
                                <th>Cesareas</th>
                                <th>Abortions</th>
                                <th>Gemerales</th>
                                <th>Ectopicos</th>
                                <th>Obitos</th>
                                <th>Springs</th>
                                <th>Live_Births</th>

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Obstetrichistory)
                            {
                            <tr>

                                <td>@item.Gestation</td>
                                <td>@item.NoOfPregnancy</td>
                                <td>@item.Delivery</td>
                                <td>@item.Term</td>
                                <td>@item.Preterm</td>
                                <td>@item.Vaginal</td>
                                <td>@item.Cesareas</td>
                                <td>@item.Abortions</td>
                                <td>@item.Gemerales</td>
                                <td>@item.Ectopic</td>
                                <td>@item.Obitus</td>
                                <td>@item.Molas</td>
                                <td>@item.Live_Births</td>


                                <td>
                                    <a href="@Url.Action("Action", "Obstetrichistory", new {ID=item.ID })" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-bs-toggle="modal" data-bs-target="#actionModal" data-href="@Url.Action("Delete", "Obstetrichistory", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "Obstetrichistory")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })


</script>
