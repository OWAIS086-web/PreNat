@model PreNat.ViewModels.PregnancyConfirmationListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.PregnancyConfirmations.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                               
                                <th>
                                    FUM
                                </th>
                               
                                <th>Positive_HCG_presence</th>
                                <th>Positive_TV_ultrasound_Date</th>
                                <th>PregnancyConfirm</th>


                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PregnancyConfirmations)
                            {
                            <tr>

                                <td>@item.FUM</td>
                                <td>@item.Positive_HCG_presence_Date</td>
                                <td>@item.Positive_TV_ultrasound_Date</td>
                                <td>@item.PregnancyConfirm</td>
                             


                                <td>
                                    <a href="@Url.Action("Action", "PregnancyConfirmation", new {ID=item.ID })" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-href="@Url.Action("Delete", "PregnancyConfirmation", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "PregnancyConfirmation")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })


</script>
