@model PreNat.ViewModels.ChronologyPregnancyListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.ChronologyPregnancys.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                               
                                <th>
                                    ReliableFUM
                                </th>
                                <th>
                                    UltrasoundObstetrics
                                </th>
                                <th>FPP</th>
                                <th>FPC</th>
                                

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChronologyPregnancys)
                            {
                            <tr>

                                <td>@item.ReliableFUM</td>
                                <td>@item.UltrasoundObstetrics</td>
                                <td>@item.FPP</td>
                                <td>@item.FPC</td>


                                <td>
                                    <a href="@Url.Action("Action", "ChronologyPregnancy", new {ID=item.ID })" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-href="@Url.Action("Delete", "ChronologyPregnancy", new { ID = item.ID })" type="button" class="data-btn btn btn-danger btn-icon-text" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "ChronologyPregnancy")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })


</script>
