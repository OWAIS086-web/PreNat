@model PreNat.ViewModels.BackgroundListingViewModel
@{
    ViewBag.Title = "_Listing";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Backgrounds.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                                <th>
                                    TBC
                                </th>
                                <th>
                                    Diabetes
                                </th>
                                <th>
                                    Hypertension
                                </th>

                                <th>
                                    Eclampsia
                                </th>

                                <th>
                                    Preeclampsia
                                </th>

                                <th>
                                    Surgery
                                </th>

                                <th>
                                    Infertility
                                </th>

                                <th>
                                    Cardiopathy
                                </th>

                                <th>
                                    Nephropathy
                                </th>

                                <th>
                                    Violence
                                </th>

                                <th>
                                    HIV
                                </th>

                                <th>
                                    Migraine
                                </th>

                                <th>
                                    Thromboembolic
                                </th>

                                <th>
                                    BMI>29
                                </th>

                                <th>
                                    BMI>39
                                </th>


                                <th>Disc_Sang</th>

                                <th>other_dises</th>

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Backgrounds)
                            {
                            <tr>
                                <td>@item.Tbc.Replace("_","|")</td>
                                <td>@item.Diabetes.Replace("_","|")</td>
                                <td>@item.Hypertension.Replace("_","|")</td>
                                <td>@item.Eclampsia.Replace("_","|")</td>
                                <td>@item.Preeclampsia.Replace("_","|")</td>
                                <td>@item.Surgery.Replace("_","|")</td>
                                <td>@item.Infertility.Replace("_","|")</td>
                                <td>@item.Cardiopathy.Replace("_","|")</td>
                                <td>@item.Nephropathy.Replace("_","|")</td>
                                <td>@item.Violence.Replace("_","|")</td>
                                <td>@item.HIV.Replace("_","|")</td>
                                <td>@item.Migraine.Replace("_","|")</td>
                                <td>@item.Thromboembolic.Replace("_","|")</td>
                                <td>@item.BMI_29.Replace("_","|")</td>
                                <td>@item.BMI_39.Replace("_","|")</td>
                                <td>@item.Disc_Sang.Replace("_","|")</td>
                                <td>@item.Other.Replace("_","|")</td>
                                

                                <td>
                                    <a href="@Url.Action("Action", "Background", new {ID=item.ID })" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</a>
                                    <button data-href="@Url.Action("Delete", "Background", new { ID = item.ID })" type="button" data-bs-toggle="modal" data-bs-target="#actionModal" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</button>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "Background")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })


</script>
